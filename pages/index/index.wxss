	height: 100%;
	background: #EEEEEE;
	margin-bottom: 100px;
}

/*head*/
.page_head{
}

.top_nav{
	background: rgba(0,0,0,.2);
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 9;
}

.channel{
	color: #fff;
	float: left;
}

.icon_nav{
	width: 39rpx;
	height: 25rpx;
	margin: 2px 10px 0px 12px;
}

.text_channel{
