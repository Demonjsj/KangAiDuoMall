	justify-content: flex-end;
	align-content: flex-end;
	margin-right: 10px;
}

.text_three_group{
	color: #FF6600;
	border: 1px dashed #FF6600;
	padding: 10rpx;
	border-right: none;
}
.text_go_group{
	background: #FF6600;
	color: #fff;
	font-size: 35rpx;
	padding: 10rpx;
}

